<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:title = "@string/title_activity_home"
    tools:context="au.edu.cdu.solarnt.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMySystemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My System"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Average"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNumberOfSystems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 nearby systems"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <az.plainpie.PieView
                android:id="@+id/pieViewMyPowerGeneration"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                plainpie:inner_pie_padding="10"
                plainpie:inner_text="0"
                plainpie:inner_text_visibility="true"
                plainpie:percentage="75"
                plainpie:percentage_size="30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Power Generation"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewMyMeanPowerGeneration"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewMeanPowerGeneration"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kiloWatts"
                    android:textAlignment="center" />

            </LinearLayout>

            <az.plainpie.PieView
                android:id="@+id/pieViewPowerGeneration"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:inner_pie_padding="10"
                app:inner_text="0"
                app:percentage_size="30"
                plainpie:inner_text_visibility="true"
                plainpie:percentage="75" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <az.plainpie.PieView
                android:id="@+id/pieViewMyEnergyGeneration"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:inner_pie_padding="10"
                app:inner_text="0"
                app:percentage_size="30"
                plainpie:inner_text_visibility="true"
                plainpie:percentage="75" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Energy Generation"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewMyMeanEnergyGeneration"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewMeanEnergyGeneration"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kiloWatt*hours"
                    android:textAlignment="center" />

            </LinearLayout>

            <az.plainpie.PieView
                android:id="@+id/pieViewEnergyGeneration"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                plainpie:inner_pie_padding="10"
                plainpie:inner_text="0"
                plainpie:inner_text_visibility="true"
                plainpie:percentage="75"
                plainpie:percentage_size="30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <az.plainpie.PieView
                android:id="@+id/pieViewMyEfficiency"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                plainpie:inner_pie_padding="10"
                plainpie:inner_text="0"
                plainpie:inner_text_visibility="true"
                plainpie:percentage="75"
                plainpie:percentage_size="30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Efficiency"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewMyMeanEfficiency"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewMeanEfficiency"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kWh/kW"
                    android:textAlignment="center" />

            </LinearLayout>

            <az.plainpie.PieView
                android:id="@+id/pieViewEfficiency"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                app:inner_pie_padding="10"
                app:inner_text="0"
                app:percentage_size="30"
                plainpie:inner_text_visibility="true"
                plainpie:percentage="75" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Updated"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonRefresh"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_toStartOf="@+id/imageButtonHelp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:drawableLeft="@drawable/icon_refresh"
                android:elevation="8dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text=" Refresh"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/imageButtonCDU"
            android:layout_width="80dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:foregroundGravity="left"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/logo_cdu_wedge" />

        <ImageButton
            android:id="@+id/imageButtonCRE"
            android:layout_width="240dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:foregroundGravity="left"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/logo_cre" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <ImageButton
            android:id="@+id/imageButtonHelp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_help" />

        <ImageButton
            android:id="@+id/imageButtonSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:layout_toStartOf="@+id/imageButtonHelp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_settings" />

        <ImageButton
            android:id="@+id/imageButtonHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_home" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageButtonHome"
            app:srcCompat="@drawable/logo_solarnt" />
    </RelativeLayout>
</FrameLayout>
